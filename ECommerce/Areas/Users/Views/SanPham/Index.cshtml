@model IEnumerable<ECommerce.Models.SanPham>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Users/Views/_Layout.cshtml";
}
<hr />
<div class="row">
    <!--phan nay la phan san pham cua trang chu--> <!--tao controller có chức năng rồi chỉnh lại bên view của controller -->
    <div id="page-content" class="home-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Carousel -->
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators hidden-xs">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/User/images/main1.jpg" alt="First slide">
                                <!-- Static Header -->
                                <div class="header-text hidden-xs">
                                    <div class="col-md-12 text-center">
                                    </div>
                                </div><!-- /header-text -->
                            </div>
                            <div class="item">
                                <img src="~/User/images/main2.jpg" alt="Second slide">
                                <!-- Static Header -->
                                <div class="header-text hidden-xs">
                                    <div class="col-md-12 text-center">
                                    </div>
                                </div><!-- /header-text -->
                            </div>
                            <div class="item">
                                <img src="~/User/images/main3.jpg" alt="Third slide">
                                <!-- Static Header -->
                                <div class="header-text hidden-xs">
                                    <div class="col-md-12 text-center">
                                    </div>
                                </div><!-- /header-text -->
                            </div>
                        </div>
                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div><!-- /carousel -->
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading"><h2>CÁC DÒNG ĐIỆN THOẠI</h2></div>

                    <div class="products">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="product">
                                    <div class="image">
                                        <a asp-controller="Sanpham" asp-action="Details" asp-route-id="@item.MaSP"
                                           asp-route-name="@item.TenSP"><img class="img-edit" src="~/image/@item.HinhAnh" /></a>
                                    </div>
                                    <div class="buttons">
                                        <a class="btn cart" asp-controller="Cart" asp-action="Buy" asp-route-id="@item.MaSP"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                    </div>
                                    <div class="caption">
                                        <div class="name"><h3>@item.TenSP</h3></div>
                                        <div class="price">@item.DonGia</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="row">
                        <div class="banner">
                            <div class="col-sm-6">
                                <img src="~/User/images/sub-banner4.png" />
                            </div>
                            <div class="col-sm-6">
                                <img src="~/User/images/sub-banner5.png" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
