@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/css/Register.css" rel="stylesheet" />
<div id="page-content" class="single-page">
    <div class="container">
        <div id="vertical-flip" class="card">
            <div class="row">
                <div class="col-md-6">
                    <div class="heading"><h2>Register</h2></div>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="form-group">
                            <label asp-for="Input.FirstName"></label>
                            <input placeholder="FirstName :" asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LastName"></label>
                            <input placeholder="LastName :" asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.BirthDay"></label>
                            <input placeholder="BirthDay :" asp-for="Input.BirthDay" class="form-control" />
                            <span asp-validation-for="Input.BirthDay" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Address1"></label>
                            <input placeholder="Address :" asp-for="Input.Address1" class="form-control" />
                            <span asp-validation-for="Input.Address1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.District1"></label>
                            <input placeholder="Address :" asp-for="Input.District1" class="form-control" />
                            <span asp-validation-for="Input.District1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Phone"></label>
                            <input placeholder="Address :" asp-for="Input.Phone" class="form-control" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"> </label>
                            <input placeholder="Email :" asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input placeholder="Password :" asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input placeholder="ConfirmPassword :" asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button class="btn btn-1" type="submit">Register</button>
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>

